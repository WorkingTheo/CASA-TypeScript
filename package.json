{
  "scripts": {
    "compile": "gulp compile",
    "myapp": "node dist/server.js",
    "start": "npm run compile && npm run myapp",
    "compile:views": "gulp bundle-views",
    "compile:locales": "gulp bundle-locales",
    "compile:sass": "gulp sass",
    "compile:typescript": "gulp compile-typescript",
    "watch:views": "nodemon --ext njk --watch app/views --exec \"npm run compile:views\"",
    "watch:locales": "nodemon --ext yaml --watch app/locales --exec \"npm run compile:locales\"",
    "watch:sass": "nodemon --ext scss --watch app/assets/stylesheets \"npm run compile:sass\"",
    "watch:typescript": "nodemon --ext ts --watch app \"npm run compile:typescript\"",
    "watch:all": "npm run watch:views & npm run watch:locales & npm run watch:sass & npm run watch:typescript",
    "serve": "nodemon --ext js,njk,yaml,css --watch dist dist/server.js",
    "dev": "npm run watch:all & npm run serve"
  },
  "dependencies": {
    "@dwp/govuk-casa": "8.11.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/nunjucks": "^3.2.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "gulp-dart-sass": "^1.1.0",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6"
  }
}